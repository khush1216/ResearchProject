<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:longClickable="true"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/activityDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:textSize="15sp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark">
    </TextView>

    <TextView
        android:id="@+id/activityDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/activityDate"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimary"
        >
    </TextView>

    <TextView
        android:id="@+id/distanceDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/activityDB"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimary"
        >
    </TextView>

    <TextView
        android:id="@+id/speedDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/distanceDB"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimary"
        >
    </TextView>

    <TextView
        android:id="@+id/calorieDB"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedDB"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimary">
    </TextView>


</RelativeLayout>